{
  "private": "true",
  "engines": {
    "node": ">=16.0.0",
    "rclone": "1.57.0"
  },
  "type": "module",
  "scripts": {
    "dev": "yode src/index.js",
    "start": "npm run dev",
    "install:rclone": "node --no-warnings scripts/install-rclone-binary.js package/lib",
    "rebuild:app-icons": "svg-app-icon --include icns --include ico --destination package/build < package/icons/rclone-logo.svg",
    "optimize-provider-icons": "pngquant --force --strip --skip-if-larger --ext .png -v package/icons/providers/*.png",
    "build": "rollup -c && npm run install:rclone",
    "dist": "npm run dist:darwin",
    "dist:darwin": "npm_config_platform=darwin npm_config_arch=x64 npm run build && yackage build --arch=x64 --platform=darwin --app-dir=package out/build/darwin",
    "dist:win32": "npm_config_platform=win32 npm_config_arch=x64 npm run build && yackage build --arch=x64 --platform=win32 --app-dir=package out/build/win32",
    "dist:linux": "npm_config_platform=linux npm_config_arch=x64 && yackage build --arch=x64 --platform=linux --app-dir=package out/build/linux"
  },
  "devDependencies": {
    "@directus/format-title": "^9.2.0",
    "@octokit/types": "^6.34.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-replace": "^3.0.0",
    "adm-zip": "^0.5.9",
    "conf": "^10.1.0",
    "debounce": "^1.2.1",
    "easy-auto-launch": "^6.0.0",
    "eslint": "^8.4.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "fetch-yode": "^1.0.2",
    "get-port": "^6.0.0",
    "gui": "^0.10.1",
    "lint-staged": "^12.1.2",
    "node-fetch": "^3.1.0",
    "object-path": "^0.11.8",
    "open": "^8.4.0",
    "parse-duration": "^1.0.2",
    "prettier": "^2.5.1",
    "rollup": "^2.60.2",
    "rollup-plugin-native": "^1.2.16",
    "rollup-plugin-natives": "^0.7.5",
    "rollup-plugin-terser": "^7.0.2",
    "semver": "^7.3.5",
    "simple-git-hooks": "^2.7.0",
    "vscode-nsfw": "^2.1.8",
    "which": "^2.0.2",
    "yackage": "^0.4.0"
  },
  "optionalDependencies": {
    "pngquant-bin": "^7.0.2",
    "svg-app-icon": "^1.1.0"
  }
}
