{
    "name": "rclonetray",
    "displayName": "RcloneTray",
    "version": "2.0.0-alpha",
    "author": "Adrian Dimitrov <dimitrov.adrian@gmail.com>",
    "homepage": "https://github.com/dimitrov-adrian/RcloneTray",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/dimitrov-adrian/RcloneTray/issues"
    },
    "releaseUpdateURI": "https://api.github.com/repos/dimitrov-adrian/RcloneTray/releases/latest",
    "build": {
        "appId": "com.github.dimitrov-adrian.rclonetray",
        "productName": "RcloneTray",
        "unpack": "+(*.node|*.html|*.png|*.gif|*.jpg|./node_modules/node-notifier/vendor/**|./rclone/**)",
        "copyright": "Copyright (c) 2020 Adrian Dimitrov"
    },
    "private": true,
    "os": [
        "darwin",
        "linux",
        "win32"
    ],
    "cpu": [
        "x64"
    ],
    "type": "module",
    "main": "src/main.js",
    "scripts": {
        "postinstall": "npm run install:rclone",
        "start": "yode src/main.js",
        "dev": "ENV=dev RCLONE_PORT=11555 nodemon --inspect --exec yode src/main.js",
        "dist": "yackage dist dist --cache-dir yode",
        "build": "yackage build out",
        "install:rclone": "rclone-fetcher",
        "build:icons": "svg-app-icon --include icns --include ico --destination build < icons/rclone-logo.svg"
    },
    "nodemonConfig": {
        "verbose": true,
        "ignore": [
            "package.json",
            "build/*",
            "node_modules/*",
            ".*/*",
            "test/*"
        ],
        "delay": "2000"
    },
    "engines": {
        "node": ">=14.0.0",
        "yode": "^0.1.3"
    },
    "dependencies": {
        "@directus/format-title": "*",
        "chokidar": "^3.4.3",
        "conf": "^7.1.2",
        "fetch-yode": "^1.0.1",
        "gui": "^0.9.2",
        "node-fetch": "^2.6.1",
        "node-notifier": "^9.0.0",
        "opener": "^1.5.2",
        "auto-launch": "^5.0.5",
        "semver": "^7.3.4"
    },
    "devDependencies": {
        "rclone-fetcher": "file:packages/rclone-fetcher",
        "nodemon": "^2.0.6",
        "yackage": "^0.3.1",
        "svg-app-icon": "^1.1.0"
    }
}
